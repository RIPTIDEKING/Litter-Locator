<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/border_image"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"
            android:id="@+id/logomark"
            android:layout_marginTop="17dp"
            android:padding="3dp"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LITTER LOCATOR"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_below="@id/logomark"
            android:id="@+id/mark"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"

    />

    <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/viewLine"
            android:background="@drawable/border_ta"
            android:layout_centerHorizontal="true"
            android:hint=" User Name"
            android:layout_marginTop="5dp"
            android:id="@+id/lEmail"
            android:padding="5dp"
    />
    <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/lEmail"
            android:background="@drawable/border_ta"
            android:layout_centerHorizontal="true"
            android:hint=" Password"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:id="@+id/lPassword"
            android:padding="5dp"
    />
    <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/viewLine"
            android:layout_below="@+id/mark"/>
    <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Log In"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/loginbtn"
            android:textColor="#ffffff"
            android:layout_below="@id/lPassword"
            android:background="#00cf00"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
    />
    <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/viewLine1"
            android:layout_below="@+id/loginbtn"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textSize="25sp"
            android:id="@+id/mark2"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/viewLine1"
    />
    <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Sign Up"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/Signbtn"
            android:textColor="#ffffff"
            android:layout_below="@id/mark2"
            android:background="#00cf00"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"

    />
</RelativeLayout>