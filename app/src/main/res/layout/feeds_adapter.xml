<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="#ffffff"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="#cceecc"
        android:id="@+id/contenerHolder"
>
<de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/logo"
        android:layout_margin="15dp"
        android:id="@+id/feedpic"
/>
    <TextView
            android:layout_width="200dp"
            android:layout_toRightOf="@id/feedpic"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:id="@+id/feedType"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:text="INDUSTRIAL WASTE"
    />
    <TextView
            android:layout_width="230dp"
            android:layout_height="78dp"
            android:textSize="20sp"
            android:layout_below="@id/feedType"
            android:id="@+id/feedinfo"
            android:layout_alignLeft="@id/feedType"/>
    <TextView
            android:layout_width="100dp"
            android:text="MNIT jaipur"
            android:layout_margin="5dp"
            android:layout_below="@id/feedpic"
            android:id="@+id/feedLoc"
            android:layout_height="25dp"/>
    <TextView
            android:layout_width="100dp"
            android:layout_below="@id/feedLoc"
            android:text="Ayush Agarwal"
            android:layout_margin="5dp"
            android:id="@+id/feedname"
            android:layout_height="25dp"/>
</RelativeLayout>
</LinearLayout>